<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="200" prefWidth="300" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.pcroom.pcproject.controller.SeatChangeController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="자리 이동" style="-fx-font-size: 18px;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="현재 좌석:"/>
        <Label fx:id="currentSeatLabel"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="새로운 좌석:"/>
        <Button text="선택" onAction="#selectNewSeat"/>
    </HBox>

    <Button text="확인" onAction="#confirmSeatChange"/>
</VBox>
