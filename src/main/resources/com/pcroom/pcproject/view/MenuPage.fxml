<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="335.0" prefWidth="1000" style="-fx-font-family: D2Coding; -fx-background-color: #292930;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pcroom.pcproject.controller.MenuPageController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <children>
        <Label alignment="TOP_CENTER" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 20 0 25 0;" text="[1주년 이벤트] 1시간만 접속해도 아이스티 증정! 카운터에서 받아가세요." textFill="#fff282">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="90.0" prefWidth="951.0" spacing="0" style="-fx-background-color: #292930; -fx-padding: 0 0 30 0;" VBox.vgrow="SOMETIMES">
            <children>
                <HBox alignment="CENTER" prefHeight="75.0" prefWidth="719.0" style="-fx-background-color: #f4f4f4; -fx-background-radius: 30 0 0 30;" HBox.hgrow="ALWAYS">
                    <children>
                  <VBox alignment="CENTER" maxHeight="30.0" style="-fx-padding: 0 0 0 10;">
                     <children>
                              <Button alignment="CENTER" contentDisplay="TOP" onAction="#slideLeft" style="-fx-font-size: 22; -fx-border-radius: 22; -fx-border-color: #29292f; -fx-text-fill: white; -fx-background-color: #29292f; -fx-background-radius: 22;" text="&lt;" textFill="#29292f">
                                  <font>
                                      <Font name="D2Coding Bold" size="24.0" />
                                  </font>
                              </Button>
                     </children>
                  </VBox>
                        <ScrollPane fx:id="categoryScrollPane" hbarPolicy="NEVER" prefHeight="75.0" style="-fx-background-color: #f4f4f4;" vbarPolicy="NEVER" HBox.hgrow="ALWAYS">
                            <content>
                                <HBox fx:id="categoryBox" alignment="CENTER" minHeight="75.0" prefHeight="75.0" prefWidth="667.0" spacing="5" style="-fx-background-color: #f4f4f4;">
                                    <!-- 카테고리 버튼들 -->
                                    <Button onAction="#filterByCategory" styleClass="button" text="전체" HBox.hgrow="ALWAYS">
                                        <font>
                                            <Font name="D2Coding Bold" size="16.0" />
                                        </font>
                                    </Button>
                                    <Button onAction="#filterByCategory" styleClass="button" text="인기상품" HBox.hgrow="ALWAYS">
                                        <font>
                                            <Font name="D2Coding Bold" size="16.0" />
                                        </font>
                                    </Button>
                                    <Button onAction="#filterByCategory" styleClass="button" text="추천상품" HBox.hgrow="ALWAYS">
                                        <font>
                                            <Font name="D2Coding Bold" size="16.0" />
                                        </font>
                                    </Button>
                                    <Button onAction="#filterByCategory" styleClass="button" text="세트상품" HBox.hgrow="ALWAYS">
                                        <font>
                                            <Font name="D2Coding Bold" size="16.0" />
                                        </font>
                                    </Button>
                                    <Button onAction="#filterByCategory" styleClass="button" text="신규상품" HBox.hgrow="ALWAYS">
                                        <font>
                                            <Font name="D2Coding Bold" size="16.0" />
                                        </font>
                                    </Button>
                                    <Button onAction="#filterByCategory" styleClass="button" text="할인상품" HBox.hgrow="ALWAYS">
                                        <font>
                                            <Font name="D2Coding Bold" size="16.0" />
                                        </font>
                                    </Button>
                                    <Button onAction="#filterByCategory" styleClass="button" text="추가메뉴" HBox.hgrow="ALWAYS">
                                        <font>
                                            <Font name="D2Coding Bold" size="16.0" />
                                        </font>
                                    </Button>
                                    <Button alignment="CENTER" contentDisplay="CENTER" onAction="#filterByCategory" styleClass="button" text="과자" HBox.hgrow="ALWAYS">
                                        <font>
                                            <Font name="D2Coding Bold" size="16.0" />
                                        </font>
                                    </Button>
                                </HBox>
                            </content>
                        </ScrollPane>
                    </children>
                </HBox>
                <HBox alignment="CENTER" minHeight="75.0" prefHeight="75.0" prefWidth="254.0" style="-fx-background-color: #f4f4f4;" HBox.hgrow="ALWAYS">
                    <children>
                  <HBox alignment="CENTER_RIGHT" maxHeight="32.0" minHeight="10.0" prefHeight="32.0" prefWidth="204.0" style="-fx-border-radius: 20; -fx-border-color: black; -fx-background-color: white; -fx-background-radius: 20;">
                     <children>
                              <TextField fx:id="FoodSearch" minWidth="100.0" onAction="#searchFood" prefHeight="26.0" prefWidth="155.0" promptText="상품명 검색" style="-fx-border-color: white; -fx-background-color: white; -fx-background-radius: 20 0 0 20; -fx-border-radius: 20 0 0 20;" />
                        <Button id="clear_btn" alignment="CENTER_RIGHT" contentDisplay="RIGHT" maxHeight="26.0" mnemonicParsing="false" onAction="#clearTextField" prefHeight="26.0" prefWidth="17.0" style="-fx-font-size: 17;" text="X" />
                     </children>
                  </HBox>
                    </children>
                </HBox>
            <VBox alignment="CENTER" style="-fx-background-color: #f4f4f4; -fx-padding: 0 10 0 10;">
               <children>
                        <Button alignment="CENTER" contentDisplay="CENTER" onAction="#slideRight" style="-fx-font-size: 22; -fx-background-radius: 22; -fx-background-color: #29292f; -fx-background-radius: 22; -fx-text-fill: white;" text="&gt;" />
               </children>
            </VBox>
            </children>
        </HBox>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background-color: #292930;" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
            <content>
                <FlowPane fx:id="menuItemsPane" alignment="TOP_CENTER" hgap="10" rowValignment="TOP" style="-fx-background-color: #292930;" vgap="10">
                    <!-- 메뉴 아이템들 -->
                </FlowPane>
            </content>
        </ScrollPane>
    </children>
